    <ImplicitUsings>enable</ImplicitUsings>
    <UserSecretsId>f251f06e-a2e7-4fe1-bae2-fdce7ef0701a</UserSecretsId>
    <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
